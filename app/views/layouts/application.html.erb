<!DOCTYPE html>
<html>
  <head>
    <title>Bookings</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>


    
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <%= link_to "Movie Bookings", welcome_index_path, :class => "navbar-brand" %>
  

  <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
      <li class="nav-item active">
        <%= link_to "Home", welcome_index_path, :class => "nav-link" %>
      </li>

      <% if @user.present? %>
          <li class="nav-item">
              <% if @user.profile_manager.present? %>
                <%= link_to "Profile", user_profile_manager_path(@user.id, @user.profile_manager.id), :class => "nav-link" if signed_in? %></li>
          <li class="nav-item dropdown"><%= link_to "Theatre", theatres_path, :class => "nav-link dropdown-toggle data-target= dropdown" %></li>
                
          <%else%>
            <li class = "nav-item" ><%= link_to "Update Profile", new_user_profile_manager_path(@user), :class => "nav-link" if signed_in? %></li>
                <%end%> 
      <% end %>
            
      </li>
    </ul>
    <ul class="navbar-nav">
      <% if current_user.present? %>
          <li><%= link_to 'Logout', destroy_user_session_path, :class => "nav-link", method: :delete, data: {confirm:"Are you Sure"} %></li>
        <% else %>
          <li><%= link_to 'Sign In', new_user_session_path, :class => "nav-link" %></li>
        <%end%>
    </ul>
      
    </form>
  </div>
</nav>
    
    <%= yield %>
  </body>
</html>
