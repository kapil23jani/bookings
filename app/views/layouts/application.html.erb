<!DOCTYPE html>
<html>
  <head>
    <title>Bookings</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>


    
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <%= link_to "Movie Bookings", welcome_index_path, :class => "navbar-brand" %>
  

  <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
      <li class="nav-item <%= 'active' if params[:controller] == 'welcomes' %>">
        <%= link_to "Home", welcome_index_path, :class => "nav-link" %>
      </li>

      <% if current_user.present? %>
        <li class="nav-item <%= 'active' if params[:controller] == 'profile_managers' %>">
            <%= link_to "Profile", new_user_profile_manager_path(current_user), class: "nav-link"  %></li>
        <li class="nav-item <%= 'active' if params[:controller] == 'theatres' %>">
          <%= link_to "Theatres", user_allshow_path(current_user), class: "nav-link", :id => 'theatreshow'  %>
        </li>
        <li class="nav-item <%= 'active' if params[:controller] == 'movies' %>">
        <%= link_to "Movies", user_showmovies_path(current_user), class: "nav-link" %>
        </li>

        <li class="nav-item <%= 'active' if params[:controller] == 'movieshows' %>">
          <%= link_to "Shows", user_movieshows_path(current_user), class: "nav-link" %>
        </li>

        <li class="nav-item <%= 'active' if params[:controller] == 'bookings' %>">
        <%= link_to "Bookings", user_bookings_path(current_user), class: "nav-link" %>
        </li>

        <li class="nav-item <%= 'active' if params[:controller] == 'casts' %>">
        <%= link_to "Casting" ,user_casts_path(current_user), class: "nav-link"   %>
        </li>


      <%else%>
          <li class = "nav-item" ></li>
      <% end %>
      </li>
    </ul>
    <ul class="navbar-nav">
      <% if current_user.present? %>
        <li><%= link_to 'Logout', destroy_user_session_path, :class => "nav-link", method: :delete, data: {confirm:"Are you Sure"} %></li>
      <% else %>
        <li><%= link_to 'Sign In', new_user_session_path, :class => "nav-link" %></li>
      <%end%>
    </ul>
    </form>
  </div>
</nav>
    
    <%= yield %>
  </body>
</html>
