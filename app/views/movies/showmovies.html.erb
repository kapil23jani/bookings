<br>&nbsp;&nbsp;&nbsp;<%= link_to "Add Movie", new_user_movie_path(current_user), class: "btn btn-primary" %>
<%= link_to "Back", welcome_index_path, class: "btn btn-warning" %>	


<%= text_field "Search", id: "search_movie" %>


<% if @movies.present? %>
<div class="container"><br>
	<div class="row">
		<% current_user.movies.each do |movie| %> 
		&nbsp;&nbsp;<div class="col-sm-3">
			<div class="card" style="width: 18rem;">
				<%= image_tag(movie.thumbnail) %>
			  <div class="card-body">
				  <h3><%= movie.name%></h3>
					<p class="card-text"><%= movie.type%>  Release Date <%= movie.release_date%></p>
					<p class="card-text"></p>
					<%= link_to "Description", user_movie_path(current_user,movie), class: "btn btn-info" %>
					<%= link_to "Reviews", "#", class: "btn btn-info" %>
				  </div>
				  <%= link_to "Remove", user_movie_path(current_user,movie), method: :delete, class: "btn btn-danger" %>
				</div>
			</div>
		<%end%>
	</div>
</div>
<%end%>




